<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.android.marsrealestate.overview.OverviewViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="2dp"
                    app:contentPadding="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
<!--                        <TextView-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:text="@{viewModel.response}"-->
<!--                            android:layout_height="wrap_content"/>-->
                        <!--            by result-->

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginBottom="4dp"
                            android:id="@+id/cv_my_results"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/active_background"
                                android:paddingStart="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:text="My Result (Search by Name)"
                                android:textColor="@color/light_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:id="@+id/ll_my_result"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:text="Center Number"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                app:cardCornerRadius="5dp"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/et_op1_center_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:paddingStart="8dp"
                                    android:background="@color/white"
                                    android:inputType="number" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Level"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Year"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <Spinner
                                        android:id="@+id/sp_opt1_level"
                                        android:padding="8dp"
                                        android:entries="@array/spinner_levels"
                                        android:layout_marginEnd="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <Spinner
                                        android:id="@+id/sp_opt1_year"
                                        android:padding="8dp"
                                        android:entries="@array/spinner_years"
                                        android:layout_marginStart="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="16dp"
                                    android:text="Enter any one or all of your name"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardCornerRadius="5dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/et_op1_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:ems="10"
                                        android:inputType="textPersonName"
                                        android:paddingStart="8dp"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="8dp" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginTop="4dp"
                                    android:text="if typing all, enter in the order you registered."
                                    android:textSize="14sp" />

                                <Button
                                    android:id="@+id/btn_fetch_result"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:backgroundTint="@color/light_blue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fetch_result" />

                            </LinearLayout>

                        </LinearLayout>
                        <!--            by result end-->

                        <!--            by center result-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginBottom="4dp"
                            android:id="@+id/cv_center_result"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_brown"
                                android:paddingStart="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:text="Center Result (Search Center Number)"
                                android:textColor="@color/light_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_center_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:text="Center Number"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="8dp"
                                app:cardCornerRadius="5dp">

                                <EditText
                                    android:id="@+id/et_opt2_center_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:paddingStart="8dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Level"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Year"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op2_level"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="8dp"
                                        android:entries="@array/spinner_levels"
                                        android:padding="8dp" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/spinner_op2_year"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:entries="@array/spinner_years"
                                        android:padding="8dp" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_op2_fetch_results"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@color/light_blue"
                                android:text="@string/fetch_result" />
                        </LinearLayout>
                        <!--            by center result end-->

                        <!--            by papers-->

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginBottom="4dp"
                            android:id="@+id/cv_gce_papers"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_brown"
                                android:paddingStart="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:text="Center Result (Filtered by Papers)"
                                android:textColor="@color/light_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_gce_papers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Center Number"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingStart="12dp"
                                    android:text="Select Level"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp">

                                    <EditText
                                        android:id="@+id/et_op3_center_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:ems="10"
                                        android:inputType="number"
                                        android:paddingStart="8dp"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="8dp" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op3_level"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:entries="@array/spinner_levels"
                                        android:padding="8dp" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Year"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Papers Passed"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op3_year"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="8dp"
                                        android:entries="@array/spinner_years"
                                        android:padding="2dp" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op3_papers_passed"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:entries="@array/spinner_papers_passed"
                                        android:padding="2dp" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_op3_fetch_results"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@color/light_blue"
                                android:text="@string/fetch_result" />

                        </LinearLayout>
                        <!--            by papers end-->

                        <!--            filtered by grades-->


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginBottom="4dp"
                            android:id="@+id/cv_gce_grades"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_brown"
                                android:paddingStart="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:text="Results (Filtered by Grades)"
                                android:textColor="@color/light_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_gce_grades"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Enter single grade"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingStart="12dp"
                                    android:text="Number of papers"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp">

                                    <EditText
                                        android:id="@+id/et_op4_grade"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white"
                                        android:ems="10"
                                        android:inputType="textCapWords"
                                        android:paddingStart="8dp" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op4_papers_passed"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:padding="8dp"
                                        android:entries="@array/spinner_papers_passed" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Level"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Year"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op4_level"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="8dp"
                                        android:padding="2dp"
                                        android:entries="@array/spinner_levels" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op4_year"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:padding="2dp"
                                        android:entries="@array/spinner_years" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_op4_fetch_results"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@color/light_blue"
                                android:text="@string/fetch_result" />

                        </LinearLayout>
                        <!--            by grades end-->

                        <!--            all results-->


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginBottom="4dp"
                            android:id="@+id/cv_all_results"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/light_brown"
                                android:paddingStart="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:text="All Results"
                                android:textColor="@color/light_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_all_results"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">





                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Level"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Year"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="8dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op5_level"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="8dp"
                                        android:padding="2dp"
                                        android:entries="@array/spinner_levels" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="5dp">

                                    <Spinner
                                        android:id="@+id/sp_op5_year"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:padding="2dp"
                                        android:entries="@array/spinner_years" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_op5_fetch_results"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@color/light_blue"
                                android:text="@string/fetch_result" />

                        </LinearLayout>
                        <!--            all results end-->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>